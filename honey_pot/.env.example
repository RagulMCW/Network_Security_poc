# Beelzebub Honeypot Environment Configuration
# Copy this file to .env and configure as needed

# ============================================
# LLM API Configuration (Optional)
# ============================================
# Enables AI-powered responses for more realistic interactions
# GLM-4.5 via Anthropic API
# Get your API keys from: https://console.anthropic.com/
# Leave blank to use fallback regex-based responses (FREE)
GLM_KEY=
ANTHROPIC_API_KEY=
ANTHROPIC_BASE_URL=https://api.z.ai/api/anthropic

# ============================================
# Logging Configuration
# ============================================
# Log level: debug, info, warn, error
BZ_LOG_LEVEL=info

# ============================================
# Network Configuration
# ============================================
# Honeypot isolated network
HONEYPOT_SUBNET=192.168.7.0/24
HONEYPOT_GATEWAY=192.168.7.1
HONEYPOT_IP=192.168.7.100

# Custom (main) network - visible to devices
CUSTOM_SUBNET=192.168.6.0/24
CUSTOM_GATEWAY=192.168.6.1
CUSTOM_IP=192.168.6.200

# ============================================
# Service Ports (Host)
# ============================================
SSH_PORT=2222
HTTP_ADMIN_PORT=8080
HTTP_ALT_PORT=8081
MYSQL_PORT=3306
POSTGRESQL_PORT=5432
LOG_VIEWER_PORT=8888

# ============================================
# Security Settings
# ============================================
# Maximum concurrent connections
MAX_CONNECTIONS=100

# Session timeout (seconds)
SESSION_TIMEOUT=300

# Enable rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ============================================
# Advanced Options
# ============================================
# Custom honeypot hostname
HONEYPOT_HOSTNAME=prod-db-server-03

# Timezone
TZ=UTC
